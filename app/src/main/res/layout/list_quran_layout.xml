<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lytListQuran"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_padding_12"
        android:layout_marginTop="@dimen/margin_padding_12"
        android:layout_marginLeft="@dimen/margin_padding_12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="16dp"
                    android:id="@+id/txtTitle"
                    android:layout_gravity="fill_vertical"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_book_black_48dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_padding_16"
                android:layout_marginBottom="@dimen/margin_padding_8">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surah No"
                    android:layout_below="@+id/txtNameSurah"
                    android:layout_toRightOf="@+id/txtTitle"
                    android:layout_toEndOf="@+id/txtTitle"
                    android:id="@+id/txtNoSurah" />

                <TextView
                    android:id="@+id/txtNameSurah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Suran Name"
                    android:layout_marginBottom="@dimen/margin_padding_8"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txtTitle"
                    android:layout_toEndOf="@+id/txtTitle" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>